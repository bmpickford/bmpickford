---    
import Layout from '../layouts/Layout.astro';
import linkedin from '/linkedin.svg';
import github from '/github.svg';
---
<style>
    .socials {
        display: flex;
        width: 10vw;
        margin: auto;
        justify-content: space-around;
        margin-top: 45vh;
    }

    img {
        height: 48px;
        width: 48px;
    }
</style>
<Layout>
    <div class="socials">
        <a class="highlight-anchor" href="https://www.linkedin.com/in/benjamin-pickford/" target="_blank">
            <div class="card">
                <img class="social" src={linkedin} />
            </div>
        </a>
        <a class="highlight-anchor" href="https://github.com/bmpickford/" target="_blank">
            <div class="card">
                <img class="social" src={github} />
            </div>
        </a>
    </div>
</Layout>