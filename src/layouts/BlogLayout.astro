---
import home from '/code-48.png';
import blog from '/read-48.png';
import contact from '/contact-48.png';
---
<html>
  <head>
    <style>
        :root {
            --primary-color: #6C19FF;
            --dark1: #2B2A33;
            --dark2: #121617;
        }
        @font-face {
            font-family: 'Bungee';
            font-display: swap;
            src: url('/fonts/Bungee-Regular.ttf') format('truetype'),
                url('/fonts/Bungee-Regular.woff2') format('woff2');
        }
        @font-face {
            font-family: 'BungeeHairline';
            font-display: swap;
            src: url('/fonts/BungeeHairline-Regular.ttf') format('truetype');
        }
        @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap');
        body {
            font-family: 'Bungee';
            margin: 0;
        }
        .container {
            display: flex;
        }
        main {
            background-color: #121212;
            width: 100vw;
        }
        .sidebar {
            width: 100px;
            height: 100vh;
            background-color: #2B2A33;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .sidebar section {
            padding: 0 22px;
            margin-bottom: 64px;
        }
        .nav:hover .item-label {
            transform:scale(1) translateX(var(--nav-width));
            transition:transform 0ms ease-in
        }
        .nav img:hover {
            transform: scale(1.1);
        }
        .nav .item-label {
            color: white;
            position: fixed;
            transform: scale(0) translateX(0);
            transition: transform .3s ease-out;
            opacity: .8;
            left: 76px;
            margin-top: 14px;
        }

        @media (max-width: 480px) {
            .sidebar {
                display: none;
            }
        }
    </style>
    <title>Ben Pickford</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-Z3NZ6FY70K"></script>
    <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-Z3NZ6FY70K');
    </script>
  </head>
  <body>
    <div class="container">
        <aside class="sidebar">
        <section>
            <a class="nav" href="/">
                <img src={home} alt="Home" />
                <span class="item-label">Home</span>
            </a>
        </section>
        <section>
            <a class="nav" href="/blog">
                <img src={blog} alt="Blog" />
                <span class="item-label">Blog</span>
            </a>
        </section>
        <section>
            <a class="nav" href="/contact">
                <img src={contact} alt="Contact" />
                <span class="item-label">Contact</span>
            </a>
        </section>
        </aside>
        <main>
            <slot />
        </main>
    </div>
  </body>
</html>
